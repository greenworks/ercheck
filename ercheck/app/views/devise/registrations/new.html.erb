<div class="login-section">
<div class="error-message">
  <%= devise_error_messages! %>
</div>
<table width="100%" border="0">
  <tr>
    <td width="70%" valign="top">
      <%= render "/common/register_info" %>
    </td>
    <td width="30%"  valign="top" class="register">
          <h2>Register</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div><%= f.label :name %> <br />
  <%= f.text_field :name %></div>

  <%= f.hidden_field :role_id , :value=> 1 %>
   <%= f.hidden_field :employer_id , :value=> 7 %>
  <%= f.hidden_field :manager_id , :value=> 1 %>

          <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
  <br/>
  <div><%= f.submit "Sign up" , :class=>"art-button" %></div>
<% end %>

<%= render "devise/shared/links" %>
    </td>
  </tr>
</table>
</div>
