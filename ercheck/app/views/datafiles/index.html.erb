<h1>Listing datafiles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Records</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @datafiles.each do |datafile| %>
  <tr>
    <td><%= datafile.name %></td>
    <td><%= datafile.records %></td>
    <td><%= datafile.status %></td>
    <td><%= link_to 'Show', datafile %></td>
    <td><%= link_to 'Edit', edit_datafile_path(datafile) %></td>
    <td><%= link_to 'Destroy', datafile, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

